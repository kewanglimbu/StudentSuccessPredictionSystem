@model StudentSuccessPrediction.Models.PreboardMarkViewModel

<h1>Create Preboard Mark</h1>

<form asp-action="Create">
   
    <div class="form-group">
        <table class="table">
            <thead>
                <tr>
                    <th>Subject Name</th>
                    <th>Marks Obtained</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Subjects != null)
                {
                    @foreach (var subject in Model.Subjects)
                    {
                        <tr>
                            <td>
                                <input type="hidden" asp-for="Subjects[@subject.Index].SubjectId" />
                                <input type="hidden" asp-for="Subjects[@subject.Index].SubjectName" />
                                @subject.Name
                            </td>
                            <td>
                                <input asp-for="Subjects[@subject.Index].MarkObtained" class="form-control" />
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2">No subjects found</td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
