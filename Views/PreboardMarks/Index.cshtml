@model List<StudentSuccessPrediction.Models.PreboardMarkViewModel>

@{
    ViewData["Title"] = "Preboard Marks";
}

<h1>Preboard Marks</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Marks</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Student Name
            </th>
            <th>
                Subject Name
            </th>
            <th>
                Mark Obtained
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MarkObtained)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
