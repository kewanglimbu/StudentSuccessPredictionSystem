@model StudentSuccessPrediction.Models.PreboardMarkViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="StudentId" class="control-label"></label>
        <select asp-for="StudentId" class="form-control" asp-items="@Model.Students">
        <option value="">-- Select Student --</option>
        </select>
    </div>

    @foreach (var subject in Model.Subjects)
{
    <div class="form-group">
        <label asp-for="@subject.MarkObtained">@subject.SubjectName</label>
        <input asp-for="@subject.MarkObtained" class="form-control" />
        <span asp-validation-for="@subject.MarkObtained" class="text-danger"></span>
    </div>
}



