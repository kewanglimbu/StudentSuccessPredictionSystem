@model StudentSuccessPrediction.Models.PreboardMarkViewModel

@{
    ViewData["Title"] = "Create";
}

<h2> Preboard Marks</h2>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="StudentId">Student</label>
                <select asp-for="StudentId" asp-items="@Model.Students" class="form-control"></select>
            </div>

        <div class="form-group">
            <label asp-for="SubjectId">Subject</label>
            <select asp-for="SubjectId" asp-items="@Model.Subjects" class="form-control"></select>
        </div>

        

        <div class="form-group">
            <label asp-for="MarkObtained"></label>
            <input asp-for="MarkObtained" class="form-control" />
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
