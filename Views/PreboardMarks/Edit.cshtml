@model StudentSuccessPrediction.Models.PreboardMarkViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Preboard Mark</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="StudentId" class="control-label"></label>
                @Html.DropDownListFor(model => model.StudentId, Model.Students, "-- Select Student --", new { @class = "form-control" })
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubjectId" class="control-label"></label>
                @Html.DropDownListFor(model => model.SubjectId, Model.Subjects, "-- Select Subject --", new { @class = "form-control" })
                <span asp-validation-for="SubjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MarkObtained" class="control-label"></label>
                <input asp-for="MarkObtained" class="form-control" />
                <span asp-validation-for="MarkObtained" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        </form>
    </div>
</div>
