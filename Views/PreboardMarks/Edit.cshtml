@model StudentSuccessPrediction.Models.PreboardMarkViewModel

<h1>Edit Preboard Mark</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="StudentId" />
    <div class="form-group">
        <label asp-for="StudentName" class="control-label"></label>
        <input asp-for="StudentName" class="form-control" />
        <span asp-validation-for="StudentName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <table class="table">
            <thead>
                <tr>
                    <th>Subject Name</th>
                    <th>Marks Obtained</
                    <th>Subject Name</th>
                    <th>Marks Obtained</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var subject in Model.Subjects)
                {
                    <tr>
                        <td>
                            <input type="hidden" asp-for="@subject.SubjectId" />
                            @subject.SubjectName
                        </td>
                        <td>
                            <input asp-for="@subject.MarkObtained" class="form-control" />
                            <span asp-validation-for="@subject.MarkObtained" class="text-danger"></span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
