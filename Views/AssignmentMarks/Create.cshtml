@model AssignmentMarkViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Assignment Marks</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="SubjectId" class="control-label"></label>
        <select asp-for="SubjectId" class="form-control" asp-items="@Model.Subjects"></select>
    </div>
    <div class="form-group">
        <label asp-for="StudentId" class="control-label"></label>
        <select asp-for="StudentId" class="form-control" asp-items="@Model.Students"></select>
    </div>
    <div class="form-group">
        <label asp-for="AssignmentMarkobtained" class="control-label"></label>
        <input asp-for="AssignmentMarkobtained" class="form-control" />
        <span asp-validation-for="AssignmentMarkobtained" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
